@model IEnumerable<RR_hookah.Models.Product>


<div class="container p-3">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">Список Продуктов</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary"><i style="margin-right: 10px" class="fas fa-plus"></i>  Создать новый продукт</a>
        </div>
    </div>


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Название продукта
                    </th>
                    <th>
                        Цена
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.Price</td>
                        <td class="text-center">
                            <div class="w-75 btn btn-group" role="group">
                                <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2"><i style="margin-right: 10px" class="far fa-edit"></i></a>
                                <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2"><i style="margin-right: 10px" class="fas fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Продукта не существует</p>
    }

</div>

